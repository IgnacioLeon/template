{
	"options": {
		"appName": {
			"default": "",
			"required": true,
			"description": "The name of your app",
			"packageJson": "name"
		},
		"author": {
			"default": "",
			"create": true,
			"description": "Your Name",
			"packageJson": "author"
		},
		"nodeServer": {
			"boolean": true,
			"default": false,
			"create": true,
			"description": "Add node.js Server",
			"requireInit": true
		},
		"customWebpackOptions": {
			"boolean": true,
			"default": false,
			"description": "Add files for user-defined webpack options",
			"requireInit": true
		},
		"cacheManifest": {
			"boolean": true,
			"default": false,
			"create": true,
			"description": "Generate a cache.manifest for your web app",
			"requireInit": false
		}
	},
	"files": {
		"README.md": 1,
		"webpackOptions.js": {
			"file": "webpackOptions.js",
			"overwrite": false,
			"ifOption": "customWebpackOptions"
		},
		"webpackOptionsDevServer.js": {
			"file": "webpackOptionsDevServer.js",
			"overwrite": false,
			"ifOption": "customWebpackOptions"
		},
		"webpackOptionsPublish.js": {
			"file": "webpackOptionsPublish.js",
			"overwrite": false,
			"ifOption": "customWebpackOptions"
		},
		"server.js": {
			"file": "server.js",
			"overwrite": true,
			"ifOption": "nodeServer"
		},
		"server.sh": {
			"file": "server.sh",
			"overwrite": true,
			"ifOption": "nodeServer"
		},
		"server.bat": {
			"file": "server.bat",
			"overwrite": true,
			"ifOption": "nodeServer"
		},
		"publish.sh": 1,
		"publish.bat": 1,
		"dev-server.sh": 1,
		"dev-server.bat": 1,
		".gitignore": {
			"overwrite": false,
			"file": "__.gitignore"
		},
		"app": {
			"directory": true,
			"than": {
				"app.js": 1,
				"web_modules": {
					"directory": true
				},
				"node_modules": {
					"directory": true
				},
				"lib": {
					"directory": true,
					"ifOption": "nodeServer",
					"than": {
						"Server.js": {
							"file": "Server.js",
							"overwrite": false,
							"ifOption": "nodeServer"
						},
						"node_modules": {
							"directory": true
						}
					}
				}
			}
		},
		"_template": {
			"directory": true,
			"than": {
				"webpackOptions.js": true,
				"webpackOptionsDevServer.js": true,
				"webpackOptionsPublish.js": true,
				"devServer.js": true,
				"publish.js": true,
				"index.jade": true,
				"entry.js": true,
				"loadWebpackOptions.js": true,
				"modules": {
					"directory": true
				}
			}
		}
	}
}